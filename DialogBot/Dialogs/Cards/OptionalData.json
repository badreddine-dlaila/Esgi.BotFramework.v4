{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Correlation ID",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "isMultiline": false,
      "id": "correlationId"
    },
    
    {
      "type": "TextBlock",
      "text": "Observation Date",
      "wrap": true
    },
    {
      "type": "Input.Date",
      "id": "observationDate",
      "value": "{{DATE(formatDateTime(utcNow(), 'yyyy-MM-ddTHH:mm:ssZ'))}}"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit"
    }
  ]
}